<Window x:Class="WDBXEditor2.Views.DefinitionSelect"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WDBXEditor2.Views"
        mc:Ignorable="d"
        Title="Select Definition" Height="400" Width="320" ResizeMode="NoResize" Icon="/Assets/icon.ico">
    <Grid Margin="10,0,10,10">
        <Grid.RowDefinitions>
            <RowDefinition Height="25px"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="30px"/>
        </Grid.RowDefinitions>
        
        <!-- Header -->
        <Label Content="Builds will be limited to available options" HorizontalAlignment="Left" Margin="-5,-3,0,0" VerticalAlignment="Top" FontWeight="Normal"/>

        <!-- Body -->
        <ListBox x:Name="DefinitionSelectList" Grid.Row="1" HorizontalAlignment="Stretch" SelectionMode="Single" SelectedIndex="0">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <TextBlock Text="{Binding DisplayName}"/>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>

        <!-- Footer -->
        <Button Content="Close" HorizontalAlignment="Right" Margin="0,0,0,0" Grid.Row="2" VerticalAlignment="Bottom" Width="70" Height="20" Click="Close_Click" />
        <Button Content="Load" HorizontalAlignment="Right" Margin="0,0,80,0" Grid.Row="2" VerticalAlignment="Bottom" Width="70" Height="20" Click="Load_Click"/>
        <ComboBox x:Name="LocaleSelectList" HorizontalAlignment="Left" Grid.Row="2" VerticalAlignment="Bottom" Width="80" Height="20" IsTextSearchEnabled="False" SelectionChanged="LocaleSelected" SelectedIndex="0">
            <ComboBox.ItemTemplate>
                <DataTemplate>
                    <TextBlock Text="{Binding DisplayName}"/>
                </DataTemplate>
            </ComboBox.ItemTemplate>
        </ComboBox>
    </Grid>
</Window>
